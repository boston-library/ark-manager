                  "url_base": {
                    "type": "string"
                  },
                  "model_type": {
                    "type": "string",
                    "nullable": true
                  },
                  "secondary_parent_pids": {
                    "type": "object",
                    "additionalProperties": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  }
                },
                "required": [
                  "local_original_identifier",
                  "local_original_identifier_type",
                  "namespace_ark",
                  "namespace_id",
                  "url_base",
